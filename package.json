{
  "name": "nove",
  "version": "2.0.0",
  "description": "A creative framework for building enterprise applications with TypeScript.",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "dev": "onchange 'src/**/*.ts' 'test/**/*.ts' -- ts-node test/app/app.ts",
    "build": "tsc -p .",
    "test": "jest test/test-suit --coverage",
    "pub": "npm run build && npm publish"
  },
  "keywords": [
    "nove",
    "koa",
    "restful",
    "typescript"
  ],
  "author": "JasonChen <me@ijason.cc>",
  "license": "MIT",
  "dependencies": {
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.28",
    "@types/node": "^10.0.2",
    "axios": "^0.18.0",
    "koa": "^2.5.1",
    "koa-router": "^7.4.0",
    "reflect-metadata": "^0.1.12",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/supertest": "^2.0.4",
    "jest": "^22.4.3",
    "onchange": "^3.3.0",
    "supertest": "^3.0.0",
    "ts-jest": "^22.4.4",
    "ts-node": "^6.0.2",
    "tslint-config-standard": "^7.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|js)$"
  }
}
